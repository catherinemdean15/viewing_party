<h1>Welcome <%= current_user.email %> </h1>


<%= button_to 'Search for movies', movies_path, method: :get %></li>

<section id="friends">
  <% current_user.buddies.each do |buddy|%>
    <% friend = User.find(buddy.friend_id) %>
    <%= friend.email %>
  <% end %>
</section>

<section id="viewing_parties" >
    <h2>Viewing Parties</h2>
      <section id='hosting'>
        <h3>Hosted Parties</h3>
        <ul>
          <% current_user.hosted_parties.each do |party| %>
            <li><%= party.movie.title %></li>
            <li><%= party.start_time.strftime('%B %d, %Y %l:%M %p')%> </li>
            <li><%= 'Hosting'%></li>
          <% end %>
        </ul>
      </section>
      <section id='invited'>
        <h3>Invited Parties</h3>
        <ul>
          <% current_user.invited_parties.each do |party| %>
            <li><%= party.movie.title %></li>
            <li><%= party.start_time.strftime('%B %d, %Y %l:%M %p')%> </li>
            <li><%= 'Invited'%></li>
          <% end %>
        </ul>
      </section>
</section>
